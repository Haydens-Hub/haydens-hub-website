---
// You can import layout, header/footer if you want consistency
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found">
  <Header />

  <main class="text-center py-20 px-4 bg-white text-olive">
    <div class="container mx-auto px-4">
        <div class="bg-white rounded-lg shadow-md p-8 max-w-md mx-auto text-center">
            <div class="emoji text-7xl mb-6">:(</div>
            <h1 class="text-2xl font-bold text-gray-800 mb-3">Oops! This page doesn't exist or is under construction.</h1>
            <p class="text-gray-600 mb-6">If you believe this is an error, please reach out to us at <a href="mailto:website.haydenshub@gmail.com" class="text-blue-600 hover:underline">website.haydenshub@gmail.com</a></p>
            
            <button onclick="window.location.href='/'" class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-6 rounded transition-colors duration-300">
                Return Home
            </button>
        </div>
    </div>
  </main>

  <Footer />
</Layout>
