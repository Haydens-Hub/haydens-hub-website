                    <tr class="border-b hover:bg-lightPurple">
                      <td class="px-4 py-3">
                        {resource.link ? (
                          <a
                            href={String(resource.link)}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-primary hover:text-accent underline font-medium"
                          >
                            {resource.organizationName}
                          </a>
