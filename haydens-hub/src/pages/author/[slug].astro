---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getAllAuthors } from "../../lib/contentful.js";
import type { Entry, Asset } from "contentful";

const { slug } = Astro.params;
const authors = await getAllAuthors();
const author = authors.find((entry) => entry.fields.slug === slug);

if (!author) {
  return Astro.redirect("/404");
}

function toStringOrNull(value: any): string | null {
  return typeof value === "string" && value.trim() !== "" ? value : null;
}

const authorFields = author.fields;
const headshotAsset = (authorFields.authorHeadshot as Asset | null) ?? null;
const headshotUrl =
  headshotAsset && "fields" in headshotAsset && headshotAsset.fields.file
    ? `https:${headshotAsset.fields.file.url}`
    : "";

export async function getStaticPaths() {
  const authors = await getAllAuthors();
  const paths = authors.map((a) => ({
    params: { slug: a.fields.slug },
  }));
  return paths;
}
---

<Layout title={`Author - ${authorFields.authorName}`}>
  <Header />

  <main id="main-content">
    <div class="container mx-auto px-4 py-12 max-w-5xl">
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="bg-primary h-24 relative"></div>

        <!-- Author Profile Section -->
        <div class="px-8 py-6 md:px-12 md:py-8 mt-24">
          <div class="flex flex-col md:flex-row">
            <!-- Author Image Column -->
            <div
              class="md:w-1/3 flex flex-col items-center md:items-start mb-8 md:mb-0 mr-6"
            >
              <div
                class="w-48 h-48 rounded-full overflow-hidden border-4 border-white shadow-lg -mt-24 mb-6 bg-lightBlue flex items-center justify-center"
              >
                {
                  headshotUrl ? (
                    <img
                      src={String(headshotUrl)}
                      alt={
                        toStringOrNull(authorFields.authorName) ||
                        "Author headshot"
                      }
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-32 h-32 text-primary"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  )
                }
              </div>

              <div class="text-center md:text-left w-full">
                <h1 class="text-3xl font-bold text-olive mb-1">
                  {authorFields.authorName}
                </h1>
                <h2 class="text-xl text-primary font-medium mb-4">
                  {authorFields.authorTitle}
                </h2>

                <div class="mb-6">
                  <h3 class="text-lg font-semibold text-olive mb-2">Contact</h3>
                  <p class="mb-2">
                    <span class="text-accent">Email:</span>
                    <a
                      href={`mailto:${authorFields.authorEmail}`}
                      class="text-primary hover:underline"
                    >
                      {authorFields.authorEmail}
                    </a>
                  </p>

                  <div
                    class="flex justify-center md:justify-start space-x-4 mt-4"
                  >
                    <!-- LinkedIn -->
                    {
                      authorFields.authorLinkedIn && (
                        <a
                          href={String(authorFields.authorLinkedIn)}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="social-icon text-primary hover:text-accent"
                        >
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-8 w-8"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                          </svg>
                        </a>
                      )
                    }

                    <!-- Instagram -->
                    {
                      authorFields.authorInstagram && (
                        <a
                          href={String(authorFields.authorInstagram)}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="social-icon text-primary hover:text-accent"
                        >
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-8 w-8"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                          </svg>
                        </a>
                      )
                    }

                    <!-- Facebook -->
                    {
                      authorFields.authorFacebook && (
                        <a
                          href={String(authorFields.authorFacebook)}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="social-icon text-primary hover:text-accent"
                        >
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-8 w-8"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                          </svg>
                        </a>
                      )
                    }

                    <!-- Twitter/X -->
                    {
                      authorFields.authorTwitter && (
                        <a
                          href={String(authorFields.authorTwitter)}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="social-icon text-primary hover:text-accent"
                        >
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-8 w-8"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
                          </svg>
                        </a>
                      )
                    }
                  </div>
                </div>
              </div>

              <!-- Back Button -->
              <div class="mt-8 text-center pb-6 mb-6">
                <a
                  id="back-button"
                  href="/advocacy"
                  class="inline-block bg-primary hover:bg-accent text-white font-medium py-2 px-6 rounded transition-colors duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 inline-block mr-2"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                  </svg>
                  Back to Article
                </a>

                <script>
                  const params = new URLSearchParams(window.location.search);
                  const fromArticle = params.get("from");
                  const backButton =
                    document.querySelector<HTMLAnchorElement>("#back-button");

                  if (fromArticle && backButton) {
                    backButton.href = `/blog/${fromArticle}`;
                  }
                </script>
              </div>
            </div>

            <!-- Author Bio Column -->
            <div
              class="md:w-2/3 md:pl-12 border-t md:border-t-0 md:border-l border-gray-200 pt-6 md:pt-0 -mt-12"
            >
              <div class="mb-8">
                <h3
                  class="text-xl font-bold text-olive border-b-2 border-green pb-2 mb-4"
                >
                  About
                </h3>
                <p class="text-gray-700 leading-relaxed mb-4">
                  {
                    authorFields.aboutAuthor ??
                      "This author has not added a bio yet."
                  }
                </p>
              </div>

              <div>
                <h3
                  class="text-xl font-bold text-olive border-b-2 border-green pb-2 mb-4"
                >
                  Reflection on Writing
                </h3>
                <div
                  class="bg-lightBlue p-5 rounded-lg border-l-4 border-primary"
                >
                  <p
                    class="text-gray-700 leading-relaxed mb-4 font-subtitle italic"
                  >
                    {
                      authorFields.reflectionOnWriting ??
                        "This author has not shared a reflection yet."
                    }
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <Footer />
  </main>
</Layout>
