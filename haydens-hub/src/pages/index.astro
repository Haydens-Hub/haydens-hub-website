---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Hayden's Hub - Supporting Youth with Special Needs">
  <Header />
  
  <main id="main-content">
            <!-- Hero Section -->
        <section id="home" class="bg-primary text-white py-16 md:py-24">
            <div class="container mx-auto px-4">
                <div class="flex flex-col md:flex-row items-center">
                    <div class="md:w-1/2 mb-8 md:mb-0">
                        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">Social Prescribing Hub for Youth with Special Needs</h1>
                        <p class="text-xl md:text-2xl mb-8">Connecting families, resources, and communities in Ottawa</p>
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="/#contact" class="bg-accent hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors text-center text-lg">Contact Us</a>
                            <a href="/resources" class="bg-white hover:bg-gray-100 text-primary font-bold py-3 px-6 rounded-lg transition-colors text-center text-lg">Explore Resources</a>
                        </div>
                    </div>
                    <div class="md:w-1/2 flex justify-center">
                        <div class="w-full max-w-md bg-white/20 rounded-lg border-2 border-white/30 overflow-hidden">
                            <img src="/assets/GettyImages-466172112.jpg" alt="Child with painted hands" class="w-full h-auto object-cover">
                        </div>                        
                    </div>
                </div>
            </div>
        </section>

        <!-- Introduction -->
        <section class="py-12 md:py-16 bg-white">
            <div class="container mx-auto px-4">
                <div class="max-w-3xl mx-auto text-center">
                    <h2 class="text-3xl md:text-4xl font-bold mb-6 text-olive">Welcome to Hayden's Hub</h2>
                    <p class="text-lg md:text-xl mb-8">We are a community organization dedicated to supporting youth with special needs and their caregivers in Ottawa. Through resources, advocacy, and connection, we aim to create a more inclusive and supportive environment for all.</p>
                    <div class="flex flex-wrap md:flex-nowrap justify-center gap-4">
                        <div class="bg-cream p-6 rounded-lg text-center w-full md:w-1/3 max-w-xs">
                            <svg class="w-12 h-12 mx-auto mb-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2L1 12H4V21H20V12H23L12 2Z" fill="#5D8DCD"></path>
                            </svg>
                            <h3 class="text-xl font-bold mb-2">Resources</h3>
                            <p>Access tools and information for caregivers and youth</p>
                        </div>
                        <div class="bg-lightBlue p-6 rounded-lg text-center w-full md:w-1/3 max-w-xs">
                            <svg class="w-12 h-12 mx-auto mb-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 8H17V6C17 3.24 14.76 1 12 1C9.24 1 7 3.24 7 6V8H6C4.9 8 4 8.9 4 10V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V10C20 8.9 19.1 8 18 8Z" fill="#3E87B0"></path>
                            </svg>
                            <h3 class="text-xl font-bold mb-2">Advocacy</h3>
                            <p>Supporting rights and inclusion for all youth</p>
                        </div>
                        <div class="bg-green p-6 rounded-lg text-center w-full md:w-1/3 max-w-xs">
                            <svg class="w-12 h-12 mx-auto mb-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 5C13.66 5 15 6.34 15 8C15 9.66 13.66 11 12 11C10.34 11 9 9.66 9 8C9 6.34 10.34 5 12 5ZM12 19.2C9.5 19.2 7.29 17.92 6 15.98C6.03 13.99 10 12.9 12 12.9C13.99 12.9 17.97 13.99 18 15.98C16.71 17.92 14.5 19.2 12 19.2Z" fill="#D43F29"></path>
                            </svg>
